<!DOCTYPE HTML>
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
		<link rel="stylesheet" type="text/css" href="css/block.css" />
		<script src="https://ajax.lug.ustc.edu.cn/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
		<script src="https://ajax.lug.ustc.edu.cn/ajax/libs/angularjs/1.4.3/angular.min.js"></script>
	</head>
	<body ng-app="application" ng-controller="appController">
		<div class="form-wrapper">
			<input type="text" id="search" placeholder="BlockID" ng-model="query_id" required>
			<input type="submit" value="Search" id="submit" ng-click="queryBlock()">
		</div>
		<table cellspacing="0" id="part_source">
			<tr>
				<th>BlockID</th>
				<th>TransactionID</th>
			</tr>
			<tr>
				<td>{{id}}</td>
				<td>{{result}}</td>
			 </tr>
		</table>
	</body>
	<script type="text/javascript" src="/js/app.js"> </script>
</html>
